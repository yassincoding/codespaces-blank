using System;


namespace biblio

{

public  class Utente{

private string id;
private string nome;
private string cognome;


private int annoiscrizione;
  public Utente(string id,string nome,string cognome,int annoiscrizione ){

   this.id=id;
   this.nome=nome;
   this.cognome=cognome;

    this.annoiscrizione = annoiscrizione;
  }
   public string Denominazione(){
   return this.nome +" "+ this.cognome;
  }
  }

 public class Libro{

 private string id;

 private string autore;

 private string titolo;

 private  Utente utente;

 public Libro (string id,string autore,string titolo ){
  this.id=id;
  this.autore=autore;
  this.titolo=titolo;
  this.utente=null;
 }
   public string  Descrizione(){

   return this.titolo + " di" + this.autore;

   }
  public void prestito(Utente utente){

  if(this.utente!=null){
   
   Console.WriteLine($"il libro gia in prestiti a {this.utente.Denominazione()}");
   return;

  }
this.utente = utente;
Console.WriteLine($"titolo prestato a {this.utente.Denominazione()}");

  }

  public void restituzione(){
   Console.WriteLine($" {this.utente.Denominazione()} a restituto ");

   this.utente=null;
  }

 }
public class biblioteca{

public static void Main(string []args ){

    Utente utente1= new Utente("001","mario","rossi",2015);

    Console.WriteLine(utente1.Denominazione());


    Utente utente2= new Utente("005","franco","ghitara",2012);

    Console.WriteLine(utente2.Denominazione());
   
   Libro libro = new Libro("l001","isola mesteriosa","giulia verni");

   Console.WriteLine(libro.Descrizione());

libro.prestito(utente1);

libro.prestito(utente2);

libro.restituzione();

libro.prestito(utente2);

}

}

  }








